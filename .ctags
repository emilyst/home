--sort=yes
--recurse=yes

--exclude=*.min.*
--exclude=*.pyc
--exclude=*.pyo
--exclude=.bundle
--exclude=.cache
--exclude=.egg-info
--exclude=.ensime_cache
--exclude=.git
--exclude=.m2
--exclude=.ropeproject
--exclude=.svn
--exclude=.tox
--exclude=.venv
--exclude=log
--exclude=node_modules
--exclude=public
--exclude=target
--exclude=tmp
--exclude=vendor

--langdef=RSpec{base=Ruby}
--kinddef-RSpec=d,describe,describes
--kinddef-RSpec=c,context,contexts
--regex-RSpec=/^[ \t]*RSpec\.describe[ \t]+([^"']+)[ \t]+do/\1/d/
--regex-RSpec=/^[ \t]*describe[ \t]+"([^"]+)"[ \t]+do/\1/d/
--regex-RSpec=/^[ \t]*describe[ \t]+'([^']+)'[ \t]+do/\1/d/
--regex-RSpec=/^[ \t]*describe[ \t]+([^"']+)[ \t]+do/\1/d/
--regex-RSpec=/^[ \t]*context[ \t]+"([^"]+)"[ \t]+do/\1/c/
--regex-RSpec=/^[ \t]*context[ \t]+'([^']+)'[ \t]+do/\1/c/
--regex-RSpec=/^[ \t]*context[ \t]+([^"']+)[ \t]+do/\1/c/
